<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart Regression Suite" verbose="2"
	thread-count="5" parallel="tests">
<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		
	</listeners>

	<test name="Login page test ">

		<parameter name="browser" value="chrome" />


		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />

		</classes>
	</test>


	<test name="Account page test ">
		<parameter name="browser" value="firefox" />

		<classes>
			<class name="com.qa.opencart.tests.AccPageTest" />
		</classes>
	</test>


	<test name="Search results page test ">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.tests.SearchResultsTest" />
		</classes>
	</test>


	<test name="ProductPageInfoTest test ">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.ProductPageInfoTest" />
		</classes>
	</test>

</suite>